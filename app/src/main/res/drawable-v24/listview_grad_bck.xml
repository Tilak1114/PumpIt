<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="60dp" />
            <gradient
                android:angle="0"
                android:endColor="#01A0FA"
                android:startColor="#29F499" />

        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="60dp" />
            <solid android:color="#fff"/>

        </shape>
    </item>
</layer-list>