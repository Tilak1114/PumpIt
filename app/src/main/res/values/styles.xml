<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bckprimary</item>
        <item name="colorPrimaryDark">@color/bckprimary</item>
        <item name="colorAccent">@color/gtstrtbck</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bckprimary</item>
        <item name="colorPrimaryDark">@color/bckprimary</item>
        <item name="colorAccent">@color/gtstrtbck</item>
    </style>
    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/bckprimary</item>
        <item name="colorAccent">@color/gtstrtbck</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/product_sans_reg</item>
    </style>

    <style name="tabtheme" parent="Base.Widget.Design.TabLayout">
        <item name="fontFamily">@font/ubuntu_b</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogStyle" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">@color/gtstrtbck</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:fontFamily">@font/product_sans_reg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressDialogStyle" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">@color/gtstrtbck</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:fontFamily">@font/product_sans_reg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="switchtheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/gtstrtbck</item>
        <item name="android:colorControlNormal">@color/typography_black</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gtstrtbck</item>
    </style>

</resources>
