<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="0"
                android:endColor="#fff"
                android:startColor="#fff" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary_rust"/>

        </shape>
    </item>
</layer-list>