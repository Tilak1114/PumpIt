<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false" >
    <shape
        android:shape="oval">
        <solid android:color="#fff" />
        <padding
            android:bottom="2dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp" />
    </shape>
</item>
<item android:state_pressed="true">
    <shape
        android:shape="oval">
        <solid android:color="#C5C5C5" />
        <padding
            android:bottom="2dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp" />
    </shape>
</item>
</selector>