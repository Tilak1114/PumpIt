<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="220dp">
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:id="@+id/plan3card"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:id="@+id/newPlanlay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="8dp"
            android:translationZ="10dp"
            android:background="@drawable/plan3"
            >
            <TextView
                android:id="@+id/newPlanDur"
                android:fontFamily="@font/helvetica_neue_lightext"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:text="12 Months Plan"
                android:textColor="@android:color/white"
                android:layout_above="@id/newPlanmembCnt"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/newPlanmembCnt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:text="0 Members"
                android:fontFamily="@font/helvetica_neue_lightext"
                android:textColor="@android:color/white"
                android:layout_marginStart="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>