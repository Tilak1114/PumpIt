<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/planlay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/mngpln"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/product_sans_reg"
                android:text="Plans"
                android:layout_marginTop="0dp"
                android:textColor="@color/typography_black"
                android:layout_above="@id/mngplncnt"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/mngplncnt"
                android:fontFamily="@font/product_sans_reg"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="3 Active Plans"
                android:textColor="@color/typography_slate"
                android:layout_marginStart="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"/>

        </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/planlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newplanrv"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                />
    <RelativeLayout
        android:id="@+id/addplanfab"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/addplanfab"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:elevation="12dp"
        android:translationZ="14dp"
        android:focusable="true"
        android:layout_width="55dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#fff"
            android:layout_centerInParent="true"
            android:background="@drawable/add"/>
    </RelativeLayout>
</RelativeLayout>