<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/coverbck"
        android:background="@drawable/profilecover">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:id="@+id/gymprofilepic"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/avatar"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:fontFamily="@font/helvetica_neue_lightext"
            android:textColor="@android:color/white"
            android:text="Evolve Fitness"
            android:textStyle="bold"
            android:layout_toEndOf="@id/gymprofilepic"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>

</RelativeLayout>