<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profilelay"
            android:layout_marginEnd="-1dp"
            android:background="@drawable/blurry"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/settingsprofile"
                android:src="@drawable/ic_settings_white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:elevation="2dp"
                android:translationZ="4dp"
                android:id="@+id/adminprofilepic"
                android:layout_height="90dp"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/avatar"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/settingsprofile"
                android:layout_toRightOf="@id/adminprofilepic"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                >
                <TextView
                    android:layout_width="140dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/profilenametv"
                    android:layout_marginStart="10dp"
                    android:text="XYZ Fit"
                    android:textStyle="bold"
                    android:fontFamily="@font/product_sans_reg"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:textSize="18sp"
                    android:layout_below="@id/profilenametv"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileaddrtv"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="10dp"
                    android:text="Rajajinagar, Blr"
                    android:fontFamily="@font/product_sans_reg"
                    />
                <Button
                    android:layout_below="@id/profileaddrtv"
                    android:id="@+id/editprofile"
                    android:layout_width="120dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp"
                    android:hapticFeedbackEnabled="true"
                    android:text="Edit Profile"
                    android:background="@drawable/button_states" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="-2dp"
            android:background="@drawable/curve"
            android:layout_below="@id/profilelay"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/profileprimaryinfolay"
            android:elevation="2dp"
            android:translationZ="4dp"
            android:layout_height="100dp"
            android:layout_below="@id/profilelay">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp">
                <LinearLayout
                    android:layout_weight="33.33"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_weight="90"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:elevation="2dp"
                        android:translationZ="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/subsstatus"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/profilecircleclickable">
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/subsplantv"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="1Y"
                            android:fontFamily="@font/product_sans_reg"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#F27A45"/>
                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="20dp"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/profilecircles">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@android:color/white"
                                android:background="@drawable/roundtick"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="wrap_content"
                        android:text="Subscription"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/primary_drab"
                        android:fontFamily="@font/product_sans_reg"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_weight="10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="33.33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/profilerev"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:elevation="2dp"
                        android:translationZ="4dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/profilecircleclickable">
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/revenueprofiletv"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="219K"
                            android:fontFamily="@font/product_sans_reg"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#F27A45"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="wrap_content"
                        android:text="Revenue"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/primary_drab"
                        android:fontFamily="@font/product_sans_reg"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_weight="10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="33.33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/profilememb"
                        android:elevation="2dp"
                        android:translationZ="4dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/profilecircleclickable">
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/membcountprofiletv"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="121"
                            android:fontFamily="@font/product_sans_reg"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#F27A45"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="wrap_content"
                        android:text="Members"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/primary_drab"
                        android:fontFamily="@font/product_sans_reg"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_weight="10"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:elevation="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:translationZ="1dp"
            android:layout_below="@id/profileprimaryinfolay"
            android:id="@+id/cashflowprofilelay"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Flow"
                    android:layout_above="@id/linecashflow"
                    android:id="@+id/cashflowtv"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/gtstrtbck"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/product_sans_reg"
                    />
                <View
                    android:layout_width="70dp"
                    android:background="@color/gtstrtbck"
                    android:layout_marginStart="10dp"
                    android:layout_above="@id/cashflowtranstv"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.6"
                    android:id="@+id/linecashflow"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cashflowtranstv"
                    android:textColor="@color/typography_black"
                    android:layout_marginBottom="10dp"
                    android:text="2/6 Dues Paid"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/product_sans_reg"
                    android:textSize="18sp"/>
                <TextView
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/alltransactionsclick"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:translationZ="2dp"
                    android:backgroundTint="@color/gtstrtbck"
                    android:focusable="true"
                    android:background="@drawable/memb_btn_rect"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="All Transactions >"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/leadsprofilelay"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="1dp"
            app:cardCornerRadius="20dp"
            android:layout_below="@id/cashflowprofilelay"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:translationZ="1dp"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enquiries"
                    android:textColor="@color/colorPrimary"
                    android:layout_above="@id/lineenq"
                    android:id="@+id/newleadsprofiletv"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/product_sans_reg" />
                <View
                    android:layout_width="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_above="@id/noofleadstv"
                    android:alpha="0.6"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/lineenq"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noofleadstv"
                    android:layout_marginBottom="10dp"
                    android:text="9 New Leads"
                    android:textColor="@color/typography_black"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/product_sans_reg"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
