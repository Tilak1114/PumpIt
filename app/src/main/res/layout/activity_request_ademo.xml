<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestADemo">

    <RelativeLayout
        android:id="@+id/newreqtitle"
        android:layout_below="@id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/NewMembpopup"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Request a Demo"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textSize="30sp"
            android:textColor="#1B1C20"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Please complete all fields"
            android:layout_below="@id/NewMembpopup"
            android:layout_marginTop="0dp"
            android:layout_marginStart="30dp"
            android:textSize="16sp"
            android:textColor="#1B1C20"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/newreqtitle"
        android:layout_marginTop="20dp"
        android:id="@+id/adminnamelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textfieldsbck"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/adminname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="3dp"
                android:inputType="text"
                android:background="@drawable/memb_btn_rect"
                android:fontFamily="@font/roboto" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="50dp"
            android:background="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/adminnamelay"
        android:layout_marginTop="10dp"
        android:id="@+id/admincontactlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textfieldsbck"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/admincontact"
                android:layout_marginTop="10dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="3dp"
                android:inputType="phone"
                android:background="@drawable/memb_btn_rect"
                android:fontFamily="@font/roboto" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="50dp"
            android:background="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/admincontactlay"
        android:layout_marginTop="10dp"
        android:id="@+id/adminemailreqlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textfieldsbck"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/adminemailreq"
                android:layout_marginTop="10dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="3dp"
                android:inputType="text"
                android:background="@drawable/memb_btn_rect"
                android:fontFamily="@font/roboto" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E mail"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="50dp"
            android:background="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/adminemailreqlay"
        android:layout_marginTop="10dp"
        android:id="@+id/gymnamelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textfieldsbck"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/gymname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="3dp"
                android:inputType="text"
                android:background="@drawable/memb_btn_rect"
                android:fontFamily="@font/roboto" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym Name"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="50dp"
            android:background="#ffffff"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reqgo"
        android:elevation="8dp"
        android:translationZ="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/getstartedbtn"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tvgetstrt"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Go"
            android:textStyle="bold"
            android:layout_marginStart="160dp"
            android:textSize="24sp"
            android:fontFamily="@font/myraidprolight"
            android:textColor="@android:color/white"
            />
        <RelativeLayout
            android:layout_height="60dp"
            android:layout_width="80dp"
            android:background="@color/gtstrtbck1"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>