<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
        <RelativeLayout
            android:id="@+id/moneylay"
            android:elevation="12dp"
            android:translationZ="14dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/managefina">

            <TextView
                android:id="@+id/mngmoney"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:fontFamily="@font/helvetica_neue_lightext"
                android:textStyle="bold"
                android:text="Finances"
                android:elevation="14dp"
                android:translationZ="16dp"
                android:textColor="@android:color/white"
                android:layout_above="@id/mngplncnt"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/mngplncnt"
                android:fontFamily="@font/helvetica_neue_lightext"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="\u25CF 6 Transactions this week \u25CF"
                android:textColor="@android:color/white"
                android:layout_marginStart="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>

</RelativeLayout>