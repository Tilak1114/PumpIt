<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/leadslay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:elevation="0dp"
        android:translationZ="0dp">

        <TextView
            android:id="@+id/leads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mngmmbcnt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:elevation="14dp"
            android:fontFamily="@font/product_sans_reg"
            android:text="Leads"
            android:textColor="@color/typography_black"
            android:textSize="26sp"
            android:textStyle="bold"
            android:translationZ="10dp" />

        <TextView
            android:id="@+id/leadcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="2dp"
            android:translationZ="10dp"
            android:elevation="8dp"
            android:fontFamily="@font/product_sans_reg"
            android:text=" Enquiries"
            android:textColor="@color/typography_slate"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/cancelleadsmain"
            android:layout_width="25dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="25dp"
            android:backgroundTint="@color/gtstrtbck"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/icn_close"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/leadslay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leadsrv">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/addenqfab"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/addplanfab"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:elevation="12dp"
        android:translationZ="14dp"
        android:focusable="true"
        android:layout_width="55dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#fff"
            android:layout_centerInParent="true"
            android:background="@drawable/add"/>
    </RelativeLayout>

</RelativeLayout>