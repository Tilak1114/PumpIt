<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/thismonthtotal"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/typography_slate"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_reg"
                android:text="Total Earnings"
                android:id="@+id/totalearningtv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/totalearningtv"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_reg"
                android:text="Rs 14000"
                android:id="@+id/totalearningval"/>
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/ref_rect"
                android:layout_marginTop="5dp"
                android:layout_below="@id/totalearningval"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:fontFamily="@font/product_sans_reg"
                android:text="+3000"
                android:id="@+id/additionvalcsh"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/additionvalcsh"
                android:paddingTop="-2dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/totalearningval"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:fontFamily="@font/product_sans_reg"
                android:text="This Week"
                android:id="@+id/thisweektv"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="50dp"
            android:alpha="0.8"
            android:rotation="-20"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/finicon"/>
    </RelativeLayout>
</RelativeLayout>