<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionDetails">

    <RelativeLayout
        android:background="@color/bckprimary"
        android:id="@+id/transdetailslay"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/canceltransdet"
            android:layout_width="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@android:color/white"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_memb"/>

        <TextView
            android:id="@+id/messagetxt"
            android:layout_toRightOf="@id/canceltransdet"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_reg"
            android:text="Transaction Details"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/deletetransaction"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_icon"/>
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/edittransaction"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/deletetransaction"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_icon"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/transdetailslay"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:elevation="1dp"
            android:translationZ="1dp"
            android:background="@drawable/ref_rect"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:id="@+id/detailstop"
               android:layout_height="70dp">
               <RelativeLayout
                   android:layout_width="45dp"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="10dp"
                   android:background="@drawable/circleexp"
                   android:id="@+id/detailslogo"
                   android:layout_height="45dp">
                   <ImageView
                       android:layout_width="25dp"
                       android:id="@+id/detailslogoimg"
                       android:backgroundTint="@android:color/white"
                       android:layout_centerInParent="true"
                       android:layout_height="25dp"
                       android:background="@drawable/gymrent"/>
               </RelativeLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/product_sans_reg"
                   android:id="@+id/maincatename"
                   android:textColor="@color/typography_slate"
                   android:text="Rent"
                   android:textSize="16sp"
                   android:textAllCaps="true"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@id/detailslogo"
                   android:layout_marginStart="10dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/expenseorinctv"
                   android:textColor="@color/colorPrimary"
                   android:fontFamily="@font/product_sans_reg"
                   android:layout_alignParentEnd="true"
                   android:textSize="16sp"
                   android:layout_marginEnd="20dp"
                   android:layout_centerVertical="true"
                   android:text="Expense"/>
           </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/detailstop"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:id="@+id/transline"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/typography_black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/transline">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transnametv"
                    android:text="Name"
                    android:textSize="14sp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transnameval"
                    android:text="XYZ"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:textColor="@color/typography_black"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transmoneytv"
                    android:text="Money"
                    android:layout_below="@id/transnametv"
                    android:textSize="14sp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transmoneyval"
                    android:text="897"
                    android:layout_below="@id/transnametv"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:textColor="@color/typography_black"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transdatetv"
                    android:layout_below="@id/transmoneytv"
                    android:text="Date"
                    android:textSize="14sp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transmoneytv"
                    android:id="@+id/transdateval"
                    android:text="11 Aug, 2019 12:00"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:textColor="@color/typography_black"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/product_sans_reg"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>