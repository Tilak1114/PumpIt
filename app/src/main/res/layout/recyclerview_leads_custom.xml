<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_memb_bck"
    android:elevation="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:id="@+id/parent_lay_lead"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:translationZ="1dp"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:layout_weight="90"
            >
            <TextView
                android:id="@+id/LeadName"
                android:text="Example name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/expected_date_lead"
                android:textSize="16sp"
                android:text="Date"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/product_sans_reg"
                android:layout_below="@id/LeadName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/call"
                android:id="@+id/calllead"
                android:backgroundTint="@color/bckprimary"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>